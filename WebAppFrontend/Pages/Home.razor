@page "/"
@inject NavigationManager Nav
@inject ApiClient Api

<h1>Battleship</h1>

<div class="menu">
    <button class="menu-btn" @onclick="StartLocalGame">
        Local Game (vs AI)
    </button>

    <button class="menu-btn" @onclick="StartMultiplayerGame">
        Multiplayer
    </button>
</div>

@code {
    async Task StartLocalGame()
    {
        Nav.NavigateTo("/placement");
    }

    void StartMultiplayerGame()
    {
        Nav.NavigateTo("/multiplayer");
    }

    void StartMultiplayerGame()
    {
        Nav.NavigateTo("/multiplayer");
    }
}